<%- include('./../layouts_coordinator/admin') %>

<div class="col-md-12">
         <!-- general form elements -->
         <div class="box box-primary">
           <div class="box-header with-border">
             <h3 class="box-title">Enroll For Event</h3>
           </div>
           <!-- /.box-header -->
           <!-- form start -->
           <div class="col-md-2">

           </div>
           <div class="col-md-8">
             <form  action="/CoordinatorDashboard/student/addEvent" method="post">
               <div class="box-body">
                 <div class="form-group">
                   <label for="">Name</label>
                   <input type="text" class="form-control" name="studentName" placeholder="Enter Name">
                 </div>

                 <div class="form-group">
                   <label for="">College Id</label>
                   <input type="text" class="form-control" name="collegeId" placeholder="College Id">
                 </div>
                 <div class="form-group">
                   <label for="">event</label>
                   <select class="form-control select2" name="event" style="width: 100%;">
                       <% event.forEach(function(event){  %>
                      <option selected="selected">Select</option>
                     <option ><%= event.eventName %></option>
                     <% }) %>
                   </select>
                 </div>


                           <div class="box-footer">
                 <button type="submit" class="btn btn-primary btn-block">Submit</button>
               </div>
             </form>
           </div>

           <div class="col-md-2">

           </div>
         </div>
</div>
<%- include('./../layouts_coordinator/footer') %>
