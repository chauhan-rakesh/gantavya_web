<%- include('./../layouts_coordinator/admin') %>

<div class="col-md-12">
         <!-- general form elements -->
         <div class="box box-primary">
           <div class="box-header with-border">
             <h3 class="box-title">Add Events</h3>
           </div>
           <!-- /.box-header -->
           <!-- form start -->
           <div class="col-md-2">

           </div>
           <div class="col-md-8">
             <form  action="/CoordinatorDashboard/event/add" method="post">
               <div class="box-body">
                 <div class="form-group">
                   <label for="">Event Name</label>
                   <input type="text" class="form-control" name="eventName" placeholder="Enter Name">
                 </div>
                 <div class="form-group">
                <label>Department </label>
              <input type="text" class="form-control" name="branchConducting" placeholder="Branch Conducting">
              </div>
                 <div class="form-group">
                   <label for="">Club/Cell</label>
                   <input type="text" class="form-control" name="clubOrCell" placeholder="Club or Cell">
                 </div>
                 <div class="form-group">
                   <label for="">Faculty Coordinator</label>
                   <textarea class="form-control"  rows="10" name="facultyCoordinator" placeholder="Faculty Coordinator"></textarea>
                 </div>
                 <div class="form-group">
                   <label for="">Student Coordinator</label>
                   <textarea class="form-control"  rows="10" name="studentCoordinator" placeholder="Student Coordinator"></textarea>
                 </div>
                 <div class="form-group">
                   <label for="">Date and Timings</label>
                   <input type="text" class="form-control" name="timeAndDate" placeholder="Octuber 10,2018 , 2:00:00 p.m - 4:30:00 p.m">
                 </div>
                 <div class="form-group">
                   <label for="">Venue</label>
                   <input type="text" class="form-control" name="venue" placeholder="Venue">
                 </div>
                 <div class="form-group">
                   <label for="">Event Task & Details</label>
                   <textarea class="form-control"  rows="20" name="Eventdetails" placeholder="Details + Rules"></textarea>
                 </div>
                 <div class="form-group">
                   <label for="">Registration Fee</label>

                   <input type="text" class="form-control" name="EventFee" placeholder="Rs.50/- per Person">
                 </div>
                 <div class="form-group">
                   <label for="">Prize</label>
                   <input type="text" class="form-control" name="winAmt" placeholder="Prize">
                 </div>

                           <div class="box-footer">
                 <button type="submit" class="btn btn-primary">Submit</button>
               </div>
             </form>
           </div>

           <div class="col-md-2">

           </div>
         </div>
</div>
<%- include('./../layouts_coordinator/footer') %>
