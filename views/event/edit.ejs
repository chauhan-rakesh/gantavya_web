<%- include('./../layouts_admin/admin') %>

<div class="col-md-12">
         <!-- general form elements -->
         <div class="box box-primary">
           <div class="box-header with-border">
             <h3 class="box-title center">Edit Coordinator</h3>
           </div>
           <!-- /.box-header -->
           <!-- form start -->
           <div class="col-md-2">

           </div>
           <div class="col-md-8">
             <form  action="/admin/event/edit/<%= event._id %>?_method=PUT" method="post">
               <div class="box-body">
                 <div class="form-group">
                   <label for="">Name</label>
                   <input type="text" class="form-control" name="eventName" value="<%= event.eventName %>" placeholder="">
                 </div>
                 <div class="form-group">
                <label>Branch Conducting</label>
              <input type="text" class="form-control" name="branchConducting" value="<%= event.branchConducting %>" placeholder="">
              </div>
                 <div class="form-group">
                   <label for="">Club or Cell</label>
                   <input type="text" class="form-control" name="clubOrCell" value="<%= event.clubOrCell %>" placeholder="">
                 </div>
                 <div class="form-group">
                   <label for="">Time and Date</label>
                   <input type="text" class="form-control" name="timeAndDate" value="<%= event.timeAndDate %>" placeholder="">
                 </div>
                 <div class="form-group">
                   <label for="">Event Task & Details</label>
                   <textarea class="form-control"  rows="10" name="Eventdetails" value="<%= event.Eventdetails %>" placeholder=""></textarea>
                 </div>
                 <div class="form-group">
                   <label for="">Registration Fee</label>

                   <input type="text" class="form-control" name="EventFee" value="<%= event.EventFee %>" placeholder="">
                 </div>
                 <div class="form-group">
                   <label for="">Winning Amount</label>
                   <input type="text" class="form-control" name="winAmt" value="<%= event.winAmt %>" placeholder="">
                 </div>

                           <div class="box-footer">
                 <button type="submit" class="btn btn-primary">Submit</button>
               </div>
             </form>
           </div>

           <div class="col-md-2">

           </div>
         </div>
</div>
<%- include('./../layouts_admin/footer') %>
